<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nur noch einen Schritt.."
        android:textColor="#cdbe70"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:id="@+id/layout_vornachname"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_persongold"
            android:background="@android:color/transparent"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColor="#cdbe70"
            android:gravity="center"
            android:hint="Vor- und Nachname"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_email"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_emailgold"
            android:background="@android:color/transparent"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#cdbe70"
            android:hint="Email-Addresse"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/telnummer"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phonegold"
            android:background="@android:color/transparent"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/etVerificationId"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#cdbe70"
            android:hint="+49 1234 4567 87"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_weiter"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="weiter"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:backgroundTint="#cdbe70"/>

</LinearLayout>