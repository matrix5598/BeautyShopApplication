<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/launcher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rania's Needling Studio"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:textSize="30sp"
        android:textColor="#cdbe70"
        android:fontFamily="cursive"/>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:flipInterval="3000"
        android:autoStart="true"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <ImageView
            android:id="@+id/sliderlogin"
            android:layout_width="match_parent"
            android:src="@drawable/kosmetikstu"
            android:layout_height="200dp"/>

        <ImageView
            android:id="@+id/sliderlogin1"
            android:layout_width="match_parent"
            android:src="@drawable/kosmetikstu2"
            android:layout_height="200dp"/>
    </ViewFlipper>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/img_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_persongold"/>

        <EditText
            android:background="#f5f5f5"
            android:id="@+id/edit_email_log"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#cdbe70"
            android:hint="Email-Adresse..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/img_pass"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:src="@drawable/ic_lock"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            app:passwordToggleEnabled="true"
            android:layout_height="50dp"
            android:background="#f5f5f5"
            android:hint="Passwort...">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_password_log"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#cdbe70"
                android:background="#f5f5f5"
                android:ems="15"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#f5f5f5"
        android:textColor="#cdbe70"
        android:text="Login"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#f5f5f5"
        android:textColor="#cdbe70"
        android:text="ZurÃ¼ck"
        android:textSize="15sp"
        android:fontFamily="cursive"/>
</LinearLayout>

